{
  "name": "shotjs",
  "version": "0.0.0-0",
  "description": "Screenshots in the browser with useful addons",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "browser": "umd/index.js",
  "sideEffects": "false",
  "scripts": {
    "build": "run-s build:*",
    "build:umd": "webpack --config webpack.umd.js",
    "build:cjs": "BABEL_ENV=cjs babel src --out-dir cjs",
    "build:esm": "babel src --out-dir esm",
    "lint": "xo",
    "server": "webpack-dev-server --config webpack.docs.js --hot",
    "start": "run-p server 'build:* -- --watch' --print-label",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Peter Mikitsh <peter.mikitsh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.0",
    "compression-webpack-plugin": "^1.1.12",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "material-react-components": "^2.0.1",
    "npm-run-all": "^4.1.3",
    "open-browser-webpack-plugin": "0.0.5",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "xo": "^0.22.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0"
  },
  "xo": {
    "env": [
      "browser"
    ],
    "extends": [
      "xo",
      "xo-react/space"
    ],
    "rules": {
      "unicorn/filename-case": 0
    },
    "settings": {
      "react": {
        "version": "16.4.2"
      }
    },
    "space": 2
  }
}
